# Environment Configuration Example
# Copy this file to .env and fill in your values

# Environment
ENVIRONMENT=production
LOG_LEVEL=INFO

# NATS Configuration
NATS_URL=nats://localhost:4222
NATS_CONSUMER_SUBJECT=binance.futures.websocket.data

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here
POSTGRES_DB=petrosa_data_manager

# MongoDB Configuration
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USER=
MONGODB_PASSWORD=
MONGODB_DB=petrosa_data_manager

# Feature Flags
ENABLE_AUDITOR=true
ENABLE_BACKFILLER=true
ENABLE_ANALYTICS=true
ENABLE_API=true

# Scheduling Configuration
AUDIT_INTERVAL=300
ANALYTICS_INTERVAL=900
HEALTH_CHECK_INTERVAL=60

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Binance API Configuration
BINANCE_API_BASE_URL=https://api.binance.com
BINANCE_FAPI_BASE_URL=https://fapi.binance.com
BINANCE_API_KEY=
BINANCE_API_SECRET=

# Data Processing Configuration
MAX_BATCH_SIZE=1000
MAX_CONCURRENT_TASKS=10
MESSAGE_QUEUE_SIZE=10000

# OpenTelemetry Configuration
OTEL_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_SERVICE_NAME=petrosa-data-manager

# Supported Trading Pairs
SUPPORTED_PAIRS=BTCUSDT,ETHUSDT,BNBUSDT,ADAUSDT,SOLUSDT

